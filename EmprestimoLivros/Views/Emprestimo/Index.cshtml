@model IEnumerable<EmprestimoLivros.Models.EmprestimosModel>

@{
    ViewData["Title"] = "index";
}


<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>

        <div>
            <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Exportar"><i class="bi bi-file-earmark-plus mx-2"></i>Exportar</a>
            <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Create"><i class="bi bi-file-earmark-plus mx-2"></i>Cadastrar novo empréstimo</a>
        </div>

    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table id="Emprestimos" class="table table-light table-hover mt-5">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro emprestado</th>
                <th scope="col">Data do empréstimo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var emprestimos in Model)
                {
                    <tr>
                        <th scope="row">@emprestimos.Recebedor</th>
                        <td>@emprestimos.Fornecedor</td>
                        <td>@emprestimos.LivroEmprestado</td>
                        <td>@emprestimos.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a class="btn btn-warning mx-2" asp-controller="Emprestimo" asp-action="Edit" asp-route-id="@emprestimos.Id"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a class="btn btn-danger mx-2" asp-controller="Emprestimo" asp-action="Delete" asp-route-id="@emprestimos.Id"><i class="bi bi-trash3 mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>