@model IEnumerable<EmprestimoLivros.Models.EmprestimosModel>

@{
    ViewData["Title"] = "index";
}


<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>
        <a class="btn btn-success mx-2">Cadastrar novo empréstimo</a>
    </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro emprestado</th>
                <th scope="col">Data do empréstimo</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach(var emprestimos in Model)
                {
                    <tr>
                        <th scope="row">@emprestimos.Recebedor</th>
                        <td>@emprestimos.Fornecedor</td>
                        <td>@emprestimos.LivroEmprestado</td>
                        <td>@emprestimos.DataUltimaAtualizacao.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>