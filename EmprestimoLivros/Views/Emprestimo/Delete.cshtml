@model EmprestimosModel
@{
    ViewData["Title"] = "Cadastrar Empréstimo";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Deletar empréstimo</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Delete">

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <h2 class="text-light">Tem certeza que deseja excluir o registro abaixo ??</h2>
        </div>

        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem esta recebendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem esta emprestando o livro?" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro emprestado:</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Nome do livro?" disabled>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a asp-controller="Emprestimo" asp-action="Index" type="submit" class="btn btn-primary w-50">Voltar</a>
        </div>

    </form>

</div>
